<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

<!--    Base Link-->
    <link name="base_link">

    </link>

<!--    Chassis-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.07 0 0.06"/>
            <geometry>
                <box size="0.16 0.085 0.09"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0.07 0 0.06"/>
            <geometry>
                <box size="0.16 0.085 0.09"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.16" y="0.085" z="0.09">
            <origin xyz="0.07 0 0.06"/>
        </xacro:inertial_box>
    </link>


    <gazebo reference="chassis">
        <material>Gazebo/Grey</material>
    </gazebo>

<!--Left  wheel  link-->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="-0.1 0.065 0"  rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link  name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!--Right  wheel  link-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="-0.1 -0.065 0"  rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link  name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <!--Left front wheel link-->
    <joint name="left_front_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0.05 0.065 0"  rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link  name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>v
            <geometry>
                <cylinder radius="0.02" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_front_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!--Right  rear  wheel  link-->
    <joint name="right_front_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0.05 -0.065 0"  rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link  name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_front_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>
